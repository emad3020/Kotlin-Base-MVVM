<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  android:gravity="center"
  android:orientation="vertical">

  <com.google.android.material.card.MaterialCardView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen20"
    android:layout_margin="@dimen/dimen12"
    app:cardBackgroundColor="@color/colorWhite"
    app:strokeColor="@color/colorWhite"
    app:cardElevation="@dimen/dimen3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:id="@+id/imgDialogIcon"
        android:layout_width="@dimen/dimen30"
        android:layout_height="@dimen/dimen30"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen16"
        android:layout_marginBottom="@dimen/dimen12"
        android:src="@drawable/btn_action_negative"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />


      <TextView
        android:id="@+id/txtDialogTitle"
        style="@style/PrettyDialogBoldFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen12"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_marginEnd="@dimen/dimen16"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgDialogIcon"
        tools:text="Popup Title" />


      <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgAnimation"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="@dimen/dimen12"
        android:layout_marginTop="@dimen/dimen16"
        android:layout_marginEnd="@dimen/dimen12"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="w,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDialogTitle"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:visibility="visible" />


      <TextView
        android:id="@+id/txtDialogContent"
        style="@style/PrettyDialogMediumFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen12"
        android:gravity="center"
        android:textColor="@color/colorDarkGray"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txtDialogTitle"
        app:layout_constraintStart_toStartOf="@+id/txtDialogTitle"
        app:layout_constraintTop_toBottomOf="@id/imgAnimation"
        tools:text="Popup Content Message"
        tools:visibility="visible" />

      <com.google.android.material.button.MaterialButton
        style="@style/TextButtonStyle"
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen16"
        android:layout_marginBottom="@dimen/dimen12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAccept"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/btnNeutral"
        app:layout_constraintTop_toBottomOf="@+id/txtDialogContent"
        tools:text="Decline" />

      <com.google.android.material.button.MaterialButton
        style="@style/TextButtonStyle"
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen3"
        android:layout_marginEnd="@dimen/dimen3"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCancel"
        app:layout_constraintTop_toTopOf="@+id/btnCancel"
        tools:text="Accept" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNeutral"
        style="@style/TextButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cancel"
        android:layout_marginStart="@dimen/dimen3"
        android:layout_marginEnd="@dimen/dimen3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnCancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>