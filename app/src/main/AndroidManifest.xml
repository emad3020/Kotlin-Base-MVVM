<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name="com.mina.mvvm.base.MyApplication"
    android:icon="${appIcon}"
    android:allowBackup="false"
    android:label="${appName}"
    android:largeHeap="true"
    android:networkSecurityConfig="@xml/network_security_config"
    android:requestLegacyExternalStorage="true"
    android:roundIcon="${appRoundIcon}"
    android:supportsRtl="true"
    android:theme="@style/Theme.AppTheme"
    tools:replace="android:allowBackup">

    <activity
      android:name="com.mina.mvvm.base.presentation.splash.SplashActivity"
      android:exported="true">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name="com.mina.mvvm.base.presentation.intro.IntroActivity" />

    <activity
      android:name="com.mina.mvvm.base.presentation.auth.AuthActivity"
      android:configChanges="orientation|screenSize"
      android:windowSoftInputMode="adjustResize|stateHidden" />

    <activity
      android:name="com.mina.mvvm.base.presentation.home.HomeActivity"
      android:configChanges="orientation|screenSize"
      android:windowSoftInputMode="adjustResize|stateHidden" />

    <!-- Start Google Services -->
   <!-- <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_api_key" />-->
    <!-- End Google Services -->

  </application>

</manifest>