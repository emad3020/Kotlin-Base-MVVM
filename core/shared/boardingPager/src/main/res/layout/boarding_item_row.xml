<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/imgBoardingAnimation"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="@dimen/_280sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:scaleType="centerInside"
    app:layout_constraintDimensionRatio="w,2:1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    tools:ignore="ContentDescription" />

  <TextView
    android:id="@+id/txtBoardingContent"
    style="@style/TutorialTitleFont"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:gravity="center"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:textSize="@dimen/_20ssp"
    android:maxLines="2"
    android:textColor="@color/colorDarkGray"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@id/imgBoardingAnimation"
    app:layout_constraintStart_toStartOf="@id/imgBoardingAnimation"
    app:layout_constraintTop_toBottomOf="@id/imgBoardingAnimation"
    tools:text="Hello From Boarding" />


</androidx.constraintlayout.widget.ConstraintLayout>