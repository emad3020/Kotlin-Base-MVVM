<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.viewpager2.widget.ViewPager2
    android:id="@+id/boardingPager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_14sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_14sdp"
    app:layout_constraintBottom_toTopOf="@+id/pagerIndicatorContainer"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
    android:id="@+id/pagerIndicatorContainer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_14sdp"
    app:layout_constraintBottom_toTopOf="@+id/btnNext"
    app:layout_constraintEnd_toEndOf="@id/boardingPager"
    app:layout_constraintStart_toStartOf="@id/boardingPager" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnNext"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:text="@string/next"
    android:textSize="@dimen/_20ssp"
    android:layout_marginBottom="@dimen/_25sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@id/boardingPager"
    app:layout_constraintStart_toStartOf="@id/boardingPager"/>

</androidx.constraintlayout.widget.ConstraintLayout>