<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical">

    <include
        android:id="@+id/included_toolbar"
        layout="@layout/toolbar_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_action_chooser_pop_up"
        style="@style/TextMediumFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen10"
        android:layout_marginEnd="@dimen/dimen5"
        android:gravity="center"
        android:text="Show Action Chooser"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size12"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/btn_show_pretty_pop_up"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/included_toolbar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_pretty_pop_up"
        style="@style/TextMediumFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_marginEnd="@dimen/dimen10"
        android:gravity="center"
        android:text="Show Pretty PopUp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size12"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_show_action_chooser_pop_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_show_action_chooser_pop_up"
        app:layout_constraintTop_toTopOf="@+id/btn_show_action_chooser_pop_up" />

    <TextView
        style="@style/TitleBoldFont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/home"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_show_pretty_pop_up"
        app:layout_constraintStart_toStartOf="@+id/btn_show_action_chooser_pop_up"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_action_chooser_pop_up" />

</androidx.constraintlayout.widget.ConstraintLayout>